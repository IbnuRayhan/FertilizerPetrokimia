@{
    ViewData["Title"] = "Edit Produk";
}

<div class="container">
    <h1>Edit Produk Pupuk</h1>

    <form asp-action="Edit">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label for="Name">Nama Produk</label>
            <input type="text" name="Name" class="form-control" value="@Model.Name" required />
        </div>
        <div class="form-group">
            <label for="Price">Harga</label>
            <input type="number" name="Price" class="form-control" value="@Model.Price" required />
        </div>
        <div class="form-group">
            <label for="Description">Deskripsi</label>
            <textarea name="Description" class="form-control" rows="4" required>@Model.Description</textarea>
        </div>
        <button type="submit" class="btn-submit">Simpan Perubahan</button>
    </form>
</div>
